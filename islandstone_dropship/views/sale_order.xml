<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_form_view_inherit_islandstone_dropship" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.island.stone</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='confirmation_date']" position="after">
                    <field name="generated_po_id"/>
                    <field name="auto_purchase_order_id"/>
                </xpath>
                <xpath expr="//page/field[@name='order_line']/form/group/group/field[@name='product_packaging']" position="before">
                    <field name="lot_id" />
                </xpath>
                <xpath expr="//field[@name='order_line']/tree//field[@name='name']" position="after">
                    <field name="lot_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>