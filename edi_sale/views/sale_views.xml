<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_edi_sale" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.edi.sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//notebook/page[last()]" position="after">
                    <page string="EDI Information">
                        <group>
                            <field name="purchase_order_number"/>
                            <field name="depositor_orde_number"/>
                            <field name="purpose_code"/>
                            <field name="po_type_code"/>
                        </group>
                    </page>
                </xpath>
            </data>
        </field>
    </record>
</odoo>