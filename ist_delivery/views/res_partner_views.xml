<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
      <record id="view_res_partner_form_inherit
_ist" model="ir.ui.view">
	<field name="name">view.res.partner.form.inherit.ist</field>
	<field name="model">res.partner</field>
	<field name="inherit_id" ref="base.view_partner_form"/>
	<field name="arch" type="xml">
	  <xpath expr="//notebook" position="inside">
	    <page string="Delivery Accounts" name="delivery_accounts">
	      <group>
		<group>
		  <field name="is_delivery_billing"/>
		  <field name="partner_delivery_billing_ids" widget="many2many_tags"/>
		</group>
	      </group>
	      <field name="delivery_account_ids" mode="tree" nolabel="1" attrs="{'required': [('is_delivery_billing', '=', True)]}">
		<tree editable="bottom">
		  <field name="carrier"/>
		  <field name="account_number"/>
		</tree>
	      </field>
	    </page>
	  </xpath>

	  <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='child_ids']/form[1]/sheet[1]/group[1]/group[2]/field[@name='name']" position="before">
	    <field name="is_delivery_billing"/>
	  </xpath>
	  
	</field>
      </record>

    </data>
</odoo>
